{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2021",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
